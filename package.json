{
	"name": "schemez",
	"version": "1.0.0",
	"author": "TakitoTech",
	"license": "MIT",
	"packageManager": "pnpm@8.6.7",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"module": "dist/schemez.esm.js",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"start": "dts watch",
		"build": "dts build",
		"test": "dts test",
		"lint": "eslint .",
		"lint-dts-fail": "dts lint",
		"prepare": "dts build",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"husky": {
		"hooks": {
			"pre-commit": "dts lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"endOfLine": "lf",
		"tabWidth": 2,
		"arrowParens": "always",
		"useTabs": true
	},
	"size-limit": [
		{
			"path": "dist/schemez.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/schemez.esm.js",
			"limit": "10 KB"
		}
	],
	"release": {
		"branches": [
			"+([0-9])?(.{+([0-9]),x}).x",
			"main",
			"next",
			"next-major",
			{
				"name": "beta",
				"prerelease": true
			},
			{
				"name": "alpha",
				"prerelease": true
			}
		]
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"packageJson": "package.json"
			}
		}
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "8.2.6",
		"@types/jest": "29.5.2",
		"@typescript-eslint/eslint-plugin": "5.61.0",
		"@typescript-eslint/parser": "5.61.0",
		"ajv": "8.12.0",
		"ajv-formats": "2.1.1",
		"dts-cli": "^2.0.3",
		"eslint": "8.44.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-config-takitotech": "1.0.2",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-prettier": "4.2.1",
		"husky": "8.0.3",
		"prettier": "2.8.8",
		"size-limit": "8.2.6",
		"tslib": "2.6.0",
		"typescript": "5.1.6"
	},
	"dependencies": {
		"ts-toolbelt": "9.6.0"
	}
}